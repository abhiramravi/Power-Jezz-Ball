<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <abhiram.iitm.jezzball.JezzView
        android:id="@+id/jezzball"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/centertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="Om"
            android:textColor="#88000000"
            android:textSize="14sp"
            android:typeface="sans"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_dark_blue"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/leftbottomtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level : 1"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:typeface="sans"
                android:visibility="visible" />

            <TextView
                android:id="@+id/centerbottomtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="Lives : "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:typeface="sans"
                android:visibility="visible" />

            <TextView
                android:id="@+id/rightbottomtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="Conquered : "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:typeface="sans"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>